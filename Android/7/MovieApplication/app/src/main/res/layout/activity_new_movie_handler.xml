<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.asu.msse.gnayak2.movieapplication.NewMovieHandler">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/new_movie_textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:text="Title"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/new_movie_textView2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:text=":"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/new_movie_editText_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:hint="title"
            android:textAlignment="textStart"
            android:gravity="start"
            android:textSize="12dp"
            android:background="@android:drawable/editbox_background" />

        <TextView
            android:id="@+id/new_movie_textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:text="Year"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/new_movie_textView4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:text=":"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/new_movie_editText_year"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:hint="year"
            android:textAlignment="textStart"
            android:gravity="start"
            android:textSize="12dp"
            android:background="@android:drawable/editbox_background" />

        <TextView
            android:id="@+id/new_movie_textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:text="Rated"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/new_movie_textView6"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:text=":"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/new_movie_editText_rated"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:hint="reated"
            android:textAlignment="textStart"
            android:gravity="start"
            android:textSize="12dp"
            android:background="@android:drawable/editbox_background" />

        <TextView
            android:id="@+id/new_movie_textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_row="3"
            android:text="Released"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/new_movie_textView8"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_row="3"
            android:text=":"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/new_movie_editText_released"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:layout_row="3"
            android:hint="click to launch picker"
            android:onClick="showDatePickerDialog"
            android:textAlignment="textStart"
            android:gravity="start"
            android:textSize="12dp"
            android:background="@android:drawable/editbox_background" />

        <TextView
            android:id="@+id/new_movie_textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_row="4"
            android:text="Rumtime"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/new_movie_textView10"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_row="4"
            android:text=":"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/new_movie_editText_runtime"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:layout_row="4"
            android:hint="runtime"
            android:textAlignment="textStart"
            android:gravity="start"
            android:textSize="12dp"
            android:background="@android:drawable/editbox_background" />

        <TextView
            android:id="@+id/new_movie_textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_row="5"
            android:text="Genre"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/new_movie_textView12"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_row="5"
            android:text=":"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/new_movie_editText_genre"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:layout_row="5"
            android:hint="genre"
            android:textAlignment="textStart"
            android:gravity="start"
            android:textSize="12dp"
            android:background="@android:drawable/editbox_background" />

        <TextView
            android:id="@+id/new_movie_textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_row="6"
            android:text="Actors"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/new_movie_textView14"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_row="6"
            android:text=":"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/new_movie_editText_actor"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:layout_row="6"
            android:hint="actors"
            android:textAlignment="textStart"
            android:gravity="start"
            android:textSize="12dp"
            android:background="@android:drawable/editbox_background" />

        <TextView
            android:id="@+id/new_movie_textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_row="8"
            android:text="Plot"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/new_movie_textView16"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_row="8"
            android:text=":"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/new_movie_editText_plot"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:layout_row="8"
            android:hint="plot"
            android:textAlignment="textStart"
            android:gravity="start"
            android:textSize="12dp"
            android:background="@android:drawable/editbox_background" />
    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/new_movie_button_save"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="saveAndExit"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/button"
        android:layout_above="@+id/new_movie_button_save"
        android:layout_centerHorizontal="true"
        android:onClick="onSearchMovieMovieClicked"/>
</RelativeLayout>
